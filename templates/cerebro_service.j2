[Unit]
Description=Cerebro Monitoring Tool
Restart=always

[Service]
ExecStart=/opt/cerebro-{{elastic_cerebro_version}}/bin/cerebro -Xms{{elastic_cerebro_heap_size}} -Xmx{{elastic_cerebro_heap_size}} -Dhttp.port={{elastic_cerebro_port}} -Dhttp.address={{elastic_cerebro_listen_host}}

[Install]
WantedBy=multi-user.target
